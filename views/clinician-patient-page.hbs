<main class="patient-container">
    <div class="patient-left">
        <a href="../../../clinician/my-patient" class="back-button">
            <span class="material-icons-round">arrow_back_ios</span>
            <h4>Back</h4>
        </a>
        <div class="patient-title-row">
            <span class="patient-title-age">
            <span class="patient-title">{{patient.givenName}} {{patient.familyName}}</span>
            <span class="patient-age">{{patient.gender}} {{patient.age}}</span></span>
            <span class="edit-ts-button"><a href="../../my-patient/{{patient._id}}/time-series" class="edit-ts">edit-time series</a></span>
        </div>
        <div class="main-section">
            <div class="ts-container whitebox shadow">
                {{!-- Time series display --}}
                {{#each patient.timeSeries}}
                    <div class="overview-data">
                        <span class="overview-data-title">{{this.logItem}}</span>
                        <span class="ts-data">{{this.lowerLimit}} - {{this.upperLimit}}</span>
                    </div>
                {{/each}}


            </div>

            <div class="patient-data whitebox shadow">
                <div>
                    <span style="font-size: 32px;">Health records</span>
                    <span class="filter-button">Filter by date
                        <input type="date">
                    </span>
                </div>

                <table class="my-patient-table">
                    <tr class="out-border">
                        <th>Date</th>
                        <th><div>Weight</div><div>(kg)</div></th>
                        <th><div>Insulin</div><div>(doses)</div></th>
                        <th><div>Exercise</div><div>(steps)</div></th>
                        <th><div>Blood Glucose</div><div>(nmol/L)</div></th>
                    </tr>
                    {{#each healthRecord}}
                    <tr class="out-border">
                        <td>{{this._id}}</td>
                        {{#each this.list}}
                        {{#if this.item}}
                        <td {{#if this.alert}}style="color: red;"{{/if}}>{{this.value}}</td>
                        {{else}}
                        <td>N/A</td>
                        {{/if}}
                        {{/each}}
                    </tr>
                    {{/each}}
                </table>
                {{!-- Not yet implement --}}
                <a href="#">show more records</a>
            </div>
        </div>
    </div>
    <div class="patient-right">
        <div>
            <span class="details-button"><a href="/clinician/my-patient/{{patient._id}}" class="edit-ts">Patient details</a></span>
        </div>

        <div class="note-section-bottom whitebox shadow nav-top">
            <div class="space-between">
                <h2 style="font-size:24px" class="select-messages">Support Messages</h2>
                <span><a href="/clinician/my-patient/{{patient._id}}/support" class="edit-ts" style="font-size:24px">Add +</a></span>
            </div>
            <div class="comment-container">
                {{#each support}}
                    <div class="comment-time">{{this.when}}</div>
                    <div class="comment-box light-blue-box shadow">
                        <span class="comment-content">{{this.content}}</span>
                    </div>
                {{/each}}
            </div>
        </div>

        {{!-- Change to display Clinician notes, not edit --}}
        <div class="note-section-bottom whitebox shadow nav-top">
            <div class="space-between">
                <h2 style="font-size:24px" class="select-messages">Clinician Notes</h2>
                <span><a href="/clinician/my-patient/{{patient._id}}/notes" class="edit-ts" style="font-size:24px">Add +</a></span>
            </div>
            <div class="comment-container">
                {{#each note}}
                    <div class="comment-time">{{this.when}}</div>
                    <div class="comment-box light-blue-box shadow">
                        <span class="comment-content">{{this.content}}</span>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    
    </div>
</main>

