<main class="patient-container">
    <div class="patient-left">
        <a href="../../../clinician/my-patient" class="back-button">
            <span class="material-icons-round">arrow_back_ios</span>
            <h4>Back</h4>
        </a>
        <div class="patient-title-row">
            <span class="patient-title">{{thisPatient.givenName}} {{thisPatient.familyName}}</span>
            <span class="patient-age">{{thisPatient.gender}} {{thisPatient.age}}</span>
            <span class="edit-ts-button"><a href="../../my-patient/{{thisPatient._id}}/time-series" class="edit-ts">edit-time series</a></span>
        </div>
        <div class="main-section">
            <div class="ts-container whitebox shadow">
                {{!-- Time series display --}}
                {{#each thisPatient.timeSeries}}
                    <div class="overview-data">
                        <span class="overview-data-title">{{this.logItem}}</span>
                        <span class="ts-data">{{this.lowerLimit}} - {{this.upperLimit}}</span>
                    </div>
                {{/each}}


            </div>

            <div class="patient-data whitebox shadow">
                <div>
                    <span style="font-size: 32px;">Health records</span>
                    <span class="filter-button">show
                        <select class="dropdown"name="select" id="select">

                            {{!-- Problem: Whats the value for? --}}
                            <option value="all">All</option>
                            <option value="bbb">bbb</option>
                        </select>
                    </span>
                </div>

                <table class="my-patient-table">
                    <tr class="out-border">
                        <th>Date</th>
                        <th><div>Blood Glucose</div><div>(nmol/L)</div></th>
                        <th><div>Weight</div><div>(kg)</div></th>
                        <th><div>Insulin</div><div>(doses)</div></th>
                        <th><div>Exercise</div><div>(steps)</div></th>
                        <th><div>Show</div><div>comment</div></th>
                    </tr>
                    {{!-- <tr class="out-border">
                        <td>10/03</td>
                        <td>7.8</td>
                        <td>65.1</td>
                        <td>4</td>
                        <td>9768</td>
                        <td><span class="material-icons-round blue-text">arrow_forward_ios</span></td>
                    </tr> --}}

                    {{#each thisHealthRecord}}
                        <tr class="out-border">
                            <td>{{this.when}}</td>
                            <td>{{this.value}}</td>

                            {{!-- Comment section, pop-up maybe? --}}
                            <td><span class="material-icons-round blue-text">arrow_forward_ios</span></td>
                        </tr>
                    {{/each}}

                </table>
                {{!-- Not yet implement --}}
                <a href="#">show more records</a>
            </div>
        </div>
    </div>
    <div class="patient-right">
        <div>
            <span class="details-button"><a href="/clinician/my-patient/{{thisPatient._id}}" class="edit-ts">Patient details</a></span>
        </div>

        <div class="note-section-bottom whitebox shadow nav-top">
            <div class="space-between">
                <h2 style="font-size:24px" class="select-messages">Support Messages</h2>
                <span><a href="/clinician/my-patient/{{thisPatient._id}}/support" class="edit-ts" style="font-size:24px">Add +</a></span>
            </div>
            {{!-- <div class="comment-container">
                <span class="comment-time">09/03/22, 7:56pm</span>
                <div class="comment-box light-blue-box shadow">
                    <span class="comment-content">Hi Mary, great day for exercising today! Keep up the good work üòä.‚Äù</span>
                </div>
            </div> --}}
            <div class="comment-container">
                {{#each thisSupportMessage}}
                    <div class="comment-time">{{this.when}}</div>
                    <div class="comment-box light-blue-box shadow">
                        <span class="comment-content">{{this.content}}</span>
                    </div>
                {{/each}}
            </div>
        </div>

        {{!-- Change to display Clinician notes, not edit --}}
        <div class="note-section-bottom whitebox shadow nav-top">
            <div class="space-between">
                <h2 style="font-size:24px" class="select-messages">Clinician Notes</h2>
                <span><a href="/clinician/my-patient/{{thisPatient._id}}/support" class="edit-ts" style="font-size:24px">Add +</a></span>
            </div>
            <div class="comment-container">
                {{#each thisClinicianNote}}
                    <div class="comment-time">{{this.when}}</div>
                    <div class="comment-box light-blue-box shadow">
                        <span class="comment-content">{{this.content}}</span>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    
    </div>
