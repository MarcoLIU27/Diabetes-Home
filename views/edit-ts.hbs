<main class="clinician-main">
    <a href="../{{patient._id}}" class="back-button">
        <span class="material-icons-round">arrow_back_ios</span>
        <h4>Back</h4>
    </a>
    <div class="main-page-content">
        <h1 class="page-title">Edit time-series</h1>
        <h2>{{patient.givenName}} {{patient.familyName}}</h2>
        <form method="post" action="" class="ts-container">
            <div class="time-series">
                {{#each patient.timeSeries}}
                <div class="single-time-series">
                    <div class="time-series-top">
                        <input type="checkbox" name="checkbox{{@index}}" {{#if this.activated}}checked="checked"{{/if}}>
                        <p>{{this.logItem}}</p>
                    </div>
                    <div class="time-series-bottom">
                        <p>Safety Threshold</p>
                        <div>
                            <input name="itemName" value="{{this.logItem}}" style="display: none;"></input>
                            <input class="time-series-value" type="number" min="0" step="any" value="{{this.lowerLimit}}" name="lowerLimit"></input>
                            <span class="material-icons-round blue-text">minimize</span>
                            <input class="time-series-value" type="number" min="0" step="any" value="{{this.upperLimit}}" name="upperLimit"></input>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="save-botton">
                <button id="time-series-button" type="submit" name="submitButton">Save</button>
            </div>
        </form>
    </div>

    <h3></h3>
</main>