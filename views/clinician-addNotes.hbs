<main class="dashboard-container">
    <div class="dashboard-right centre-content">

        {{!-- Pop up window after post message --}}
        <div class="pop-up-container" id="successful-update-data">
            <img class="pop-up-image" src="/images/clap.svg" alt="">
            <div class="pop-up-string">
                <h3>Notes Updated</h3>
            </div>
            <span class="button submit" onclick="closeModel()">Dismiss</button>
        </div>


        <form method="post" action="">
            <div id="blue-main-page" class="centre-flex">
                <h3 class="blue-text">Add a Clinical Note</h3>
                <div class="date-time-container">
                    <div class="page-title-icon">
                        <span class="material-icons-round blue-text">schedule</span>
                        <h3 class="blue-text">Time</h3>
                    </div>
                    <h3 class="blue-text">{{time}}</h3>
                </div>
                <div>
                    <div class="page-title-icon on-top">
                        <span class="material-icons-round blue-text">edit</span>
                        <h3 class="blue-text">Notes</h3>
                    </div>

                    <div class="notes-container">
                        <textarea name="notes" id="message-input" cols="30 " rows="5"
                            maxlength="200">{{placeholder}}</textarea>
                    </div>
                </div>

                <button type="submit" class="button button-width-20" onclick="showModel()">Save</button>
                {{!-- <span class="button button-width-20" onclick="showModel()">Save</button> --}}

            </div>
        </form>
    </div>
</main>