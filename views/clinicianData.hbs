{{> cnav}}

<main class="clinician-main">
    <a href="../clinician/home" class="back-button">
        <span class="material-icons-round">arrow_back_ios</span>
        <h4>Back</h4>
    </a>
    <div>
        <h1 class="page-title">Account</h1>
        <br>
 
        <section id="profile-container">

            <div class="profile-picture-container">
                <h2>My profile picture</h2>
                <img class = "profile-picture-display" src="/images/clinitian-profile-pic.svg" alt="profile picture">
                <h3 class="blue-text">Change profile picture</h3>
            </div>

            <ul class="profile-statistic">
                <li>
                    <h2>First Name</h2>
                    </br>
                    <h3 class="blue-text">{{thisClinician.givenName}}</h3>
                </li>

                <li>
                    <h2>Gender</h2>
                    </br>
                    <h3 class="blue-text">{{thisClinician.gender}}</h3>
                </li>

                <li>
                    <h2>Email</h2>
                    </br>
                    <h3 class="blue-text">{{thisClinician.email}}</h3>
                </li>

                <li>
                    <h2>Last Name</h2>
                    </br>
                    <h3 class="blue-text">{{thisClinician.familyName}}</h3>
                </li>

                <li>
                    <h2>Birthday</h2>
                    </br>
                    <h3 class="blue-text">{{thisClinician.dateOfBirth}}</h3>
                </li>

                <li>
                    <h2>Mobile</h2>
                    </br>
                    <h3 class="blue-text">0{{thisClinician.mobile}}</h3>
                </li>
            </ul>
        </section>
    </div>
</main>
